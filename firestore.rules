rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Spots collection - hitchhiking locations
    match /spots/{spotId} {
      // Anyone can read spots
      allow read: if true;

      // Authenticated users can create spots
      allow create: if request.auth != null
        && request.resource.data.keys().hasAll(['lat', 'lng', 'createdAt'])
        && request.resource.data.lat is number
        && request.resource.data.lng is number;

      // Only the creator can update/delete their spot
      allow update, delete: if request.auth != null
        && request.auth.uid == resource.data.userId;
    }

    // Users collection - user profiles
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can create/update their own profile
      allow create, update: if request.auth != null
        && request.auth.uid == userId;

      // Users cannot delete profiles
      allow delete: if false;
    }

    // Reviews collection - spot reviews
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;

      // Authenticated users can create reviews
      allow create: if request.auth != null
        && request.resource.data.keys().hasAll(['spotId', 'rating', 'createdAt'])
        && request.resource.data.rating is number
        && request.resource.data.rating >= 1
        && request.resource.data.rating <= 5;

      // Only the reviewer can update/delete their review
      allow update, delete: if request.auth != null
        && request.auth.uid == resource.data.userId;
    }
  }
}
