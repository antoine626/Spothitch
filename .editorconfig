# EditorConfig - https://editorconfig.org
# Assure une cohérence du code entre tous les éditeurs

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.html]
indent_size = 4

[Makefile]
indent_style = tab
