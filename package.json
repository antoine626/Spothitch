  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,css,html}",
    "test:lighthouse": "lhci autorun",
    "test:monkey": "playwright test e2e/monkeyTest.spec.js --project=chromium",
    "test:all": "vitest run && vitest run tests/wiring/ tests/integration/modals.test.js && npm run build",
    "deploy": "npm run build && gh-pages -d dist",
    "sync:spots": "node scripts/extract-spots.mjs"
  },
  "dependencies": {
    "@sentry/browser": "^7.120.4",
    "dompurify": "^3.0.6",
    "firebase": "^12.7.0",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@sentry/vite-plugin": "^2.14.2",
    "@vitejs/plugin-legacy": "^5.2.0",
    "@vitest/coverage-v8": "^1.2.2",
    "autoprefixer": "^10.4.16",
    "better-sqlite3": "^11.10.0",
