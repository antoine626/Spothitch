    "prettier": "^3.2.4",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.2.2"
  },
